<!doctype html>
<html lang="es">
<%- include('./templates/header') %>
<body>
<div class="container">
    <div class="card shadow-lg p-3 mb-5 bg-white">
        <div class="card-header"><h3>Insertar Empleado</h3></div>
        <div class="card-body">
            <form method="post">
                <div class="row m-3">
                    <label for="idEmployee" class="col-sm-2 col-form-label">Código</label>
                    <div class="col-sm-4">
                        <input type="text" name="idEmployee" class="form-control" id="code" pattern="[0-9]+" required
                               aria-describedby="codeHelp">
                        <div id="codeHelp" class="form-text">Digite solo Números</div>
                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">Apellidos</label>
                        <input type="text" name="lastName" id="lastName" class="form-control" pattern="[a-zA-z\s]+"
                               required>
                    </div>
                    <div class="col-sm-6">
                        <label for="name" class="form-label">Nombres</label>
                        <input type="text" name="name" id="name" class="form-control" pattern="[a-zA-z\s]+" required>
                    </div>
                </div>

                <div class="row m-3">
                    <div class="col-sm-6">
                        <label for="dateBirthday" class="form-label">Fecha de Nacimiento</label>
                        <input type="date" id="dateBirthday" name="dateBirthday" class="form-control" required>
                    </div>
                    <div class="col-sm-6">
                        <label for="salary" class="form-label">Salario</label>
                        <input type="text" id="salary" name="salary" class="form-control" required>
                    </div>
                </div>
                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Género</legend>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" value="F"
                                   checked>
                            <label class="form-check-label" for="gender">
                                Femenino
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" value="M">
                            <label class="form-check-label" for="gender">
                                Masculino
                            </label>
                        </div>
                    </div>
                </fieldset>
                <div class="row mt-3">
                    <button type="submit" class="btn btn-primary">Enviar Datos</button>
                </div>
            </form>
        </div>
        <div class="card-footer">

        </div>
    </div>
</div>
<%- include('./templates/footer')%>
<script>
    document.getElementById('salary').addEventListener('keypress',onlyNumbers);
    document.getElementById('salary').addEventListener('keyup',(event)=>{
        const field = document.getElementById('salary');
        const clean = String(field.value).replace(/\D/g,"");
        const aux = new Intl.NumberFormat('en-US').format(clean);
        field.value = aux;
    });
</script>
</body>
</html>
